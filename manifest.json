{
    "manifest_version": 3,
    "name": "SpeedyApply Open",
    "version": "1.0",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "src/popup/index.html",
        "default_title": "SpeedyApply Open"
    },
    "options_page": "src/options/index.html",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/data/dictionary.js",
                "src/content/matcher.js",
                "src/content/injector.js",
                "src/content/engine.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/popup/index.html",
                "src/popup/style.css",
                "src/popup/popup.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}